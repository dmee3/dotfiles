# Make a directory and cd into it
mcd () {
  mkdir -p $1; cd $1;
}

# Either cat a file or ls a directory
show () {
  if [[ -d $@ ]]; then
    ls -lah $@
  elif [[ -f $@ ]]; then
    cat $@
  else
    echo "show: $@: No such file or directory"
  fi
}

# Toggle window manager (chunkwm and skhd)
wm() {
  ruby ~/.bashrc_files/wm.rb
}

# Switch to a given iTerm2 profile
it2prof() {
  echo -e "\033]50;SetProfile=$1\a"
}

# Analyze a picture's colors and set the bash theme based on it
  set_theme_from_picture() {
  picture=$1
  python ~/.bash/themes/theme-gen.py $picture --no-background --transparency 0.2 --parent bash
  it2prof Default.Profile.Theme
}

# Run vim based on fuzzy find
vf() {
  local files
  IFS=$'\n' files=($(fzf --height=50% --query="$1" --multi --select-1 --exit-0 --preview-window right:70% --preview 'highlight -O ansi -l --failsafe {}'))
  [[ -n "$files" ]] && ${EDITOR:-vim} "${files[@]}"
}

# Sometimes you just need to vent
fuck() {
  ruby ~/.bashrc_files/swearjar.rb fuck "$@"
}
shit() {
  ruby ~/.bashrc_files/swearjar.rb shit "$@"
}

# Print a colorized success/failure message
report_status() {
  if [ $1 == 0 ]; then
    echo -e "\033[0;32mSUCCESS\033[0m"
  else
    echo -e "\033[0;31mFAILURE\033[0m"
  fi
}

